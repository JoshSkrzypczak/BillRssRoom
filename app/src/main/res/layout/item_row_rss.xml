<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bill"
            type="com.josh.billrssroom.model.BillItem" />
        <variable name="callback"
            type="com.josh.billrssroom.ui.BillClickCallback"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_item_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="2dp">

            <RelativeLayout
                android:id="@+id/top_layout_item_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/bill_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="24sp"
                    android:text="@{bill.title}"
                    tools:text="@string/bill_title" />

                <TextView
                    android:id="@+id/bill_pub_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/bill_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="14sp"
                    android:text="@{bill.formattedDate}"
                    tools:text="@string/publication_date" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/bill_pub_date"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/text_view_divider" />

                <TextView
                    android:id="@+id/bill_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bill_pub_date"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:maxLines="15"
                    android:paddingBottom="6dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="14sp"
                    android:text="@{bill.formattedDescription}"
                    tools:text="@string/bill_description" />

                <RelativeLayout
                    android:id="@+id/bottom_layout_item_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bill_description"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/heart_saved"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:onClick="@{()-> callback.onSaveClick(bill)}"
                        android:layout_toLeftOf="@+id/share_button"
                        android:background="@android:color/transparent"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_favorite_empty_dark"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/share_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:onClick="@{()-> callback.onShareClick(bill)}"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_share_dark"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/open_in_browser_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:onClick="@{() -> callback.onBrowserClick(bill)}"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="?attr/colorAccent"
                        app:srcCompat="@drawable/ic_browser_dark"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>